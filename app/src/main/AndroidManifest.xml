<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sf.struct"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".StructApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.sf.struct.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sf.struct.activity.WebActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name="com.sf.struct.activity.AidlActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <service
            android:name="com.sf.struct.service.RemoteService"
            android:enabled="true"
            android:exported="true"
            android:process=":other">
            <intent-filter>
                <action android:name="com.sf.back.aidl.Server.Action" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>